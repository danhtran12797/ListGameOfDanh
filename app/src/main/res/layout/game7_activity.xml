<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#92ede3"
    tools:context=".game7.Game7_Activity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_game7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="Game bầu cua" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_game7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/imgQues1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/game7_anim_img"
                app:srcCompat="@drawable/quesion" />

            <ImageView
                android:id="@+id/imgQues3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/game7_anim_img"
                app:srcCompat="@drawable/quesion" />

            <ImageView
                android:id="@+id/imgQues2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/game7_anim_img"
                app:srcCompat="@drawable/quesion" />
        </LinearLayout>

        <Button
            android:id="@+id/btnXoay"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="3dp"
            android:layout_weight="0.5"
            android:background="@drawable/game7_anim_btn"
            android:text="Xoay"
            android:textColor="#ff0"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtTinhTien"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="100"
            android:textColor="@android:color/holo_red_light"
            android:textSize="32sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnXacNhan"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="3dp"
            android:layout_weight="0.5"
            android:background="@drawable/game7_anim_btn"
            android:text="Xác nhận đặt cược"
            android:textColor="#ff0"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imgChim2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/game7_anim_img"
                    app:srcCompat="@drawable/chim2" />

                <TextView
                    android:id="@+id/txtChim2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/background_dark"
                    android:text="0"
                    android:textColor="@android:color/background_light"
                    android:textSize="26sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imgChim3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/game7_anim_img"
                    app:srcCompat="@drawable/chim3" />

                <TextView
                    android:id="@+id/txtChim3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/background_dark"
                    android:text="0"
                    android:textColor="@android:color/background_light"
                    android:textSize="26sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imgChim1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/game7_anim_img"
                    app:srcCompat="@drawable/chim1" />

                <TextView
                    android:id="@+id/txtChim1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/background_dark"
                    android:text="0"
                    android:textColor="@android:color/background_light"
                    android:textSize="26sp"
                    android:textStyle="bold" />
            </RelativeLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imgChim5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/game7_anim_img"
                    app:srcCompat="@drawable/chim5" />

                <TextView
                    android:id="@+id/txtChim5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/background_dark"
                    android:text="0"
                    android:textColor="@android:color/background_light"
                    android:textSize="26sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imgChim6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/game7_anim_img"
                    app:srcCompat="@drawable/chim6" />

                <TextView
                    android:id="@+id/txtChim6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/background_dark"
                    android:text="0"
                    android:textColor="@android:color/background_light"
                    android:textSize="26sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imgChim4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/game7_anim_img"
                    app:srcCompat="@drawable/chim4" />

                <TextView
                    android:id="@+id/txtChim4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/background_dark"
                    android:text="0"
                    android:textColor="@android:color/background_light"
                    android:textSize="26sp"
                    android:textStyle="bold" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>